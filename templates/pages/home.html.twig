{% extends 'base.html.twig' %}

{% block stylesheets_top %}
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/styles/home.css" />
{% endblock %}

{% block content %}
  {% if app.user %}
    <!-- Modaux de suppression des tricks -->
    {% for trick in tricks %}
      {% include 'Elements/trick/delete_modal.html.twig' with {'trick': trick} %}
    {% endfor %}
  {% endif %}

  <div class="container-fluid p-0">
  <!-- Background designed by Freepik -->
    <div class="header">
      <div class="header-content">
        <div class="header-title">SnowTricks</div>
        <div class="header-subtitle">Annuaire de tricks de Snowboard</div>
      </div>
      <a href="#tricks" class="scroll-arrow scroll-down p-3"><i class="bi bi-arrow-down-circle-fill"></i></a>
    </div>
  </div>
  <div id="tricks" class="container-fluid">
    <h1 class="text-center fw-bold my-2 py-2">Les tricks</h1>
    <div class="row">
      {% for trick in tricks %}
        {% include 'Elements/trick/display_card.html.twig' with {'trick': trick} %}
      {% endfor %}
    </div>
    <div id="load_more_buttons" class="position-relative px-3 pb-3 d-flex justify-content-center align-items-center">
      <button type="button" class="fw-bold btn btn-outline-secondary load-more">
        Charger plus
      </button>
      <button type="button" disabled=true class="fw-bold btn btn-outline-secondary d-none loading-more">
        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
        Chargement ...
      </button>
      <a href="#tricks" class="scroll-arrow scroll-up position-absolute end-0"><i class="bi bi-arrow-up-circle-fill"></i></a>
    </div>
  </div>
{% endblock %}

{% block javascripts_top %}
  <script src="/scripts/home_load_more.js"></script>
{% endblock %}
