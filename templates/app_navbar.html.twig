{% set route_name = app.request.attributes.get('_route') %}
<nav class="navbar navbar-expand-sm navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">
      <img src="/images/logo.svg"
        alt="logo snowtricks"
        height="30" />
    </a>
    <button class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarScroll"
      aria-controls="navbarScroll"
      aria-expanded="false"
      aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarScroll">
      <ul class="navbar-nav ms-auto my-2 my-sm-0 navbar-nav-scroll text-center">
        <li class="nav-item">
          <a class="nav-link py-0{% if route_name == "app_home" %} active{% endif %}" href="{{ path('app_home') }}">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link py-0{% if route_name starts with "app_trick" %} active{% endif %}" href="{{ path('app_trick_new') }}">Tricks</a>
        </li>
        {% if app.user %}
            <li class="nav-item">
                <a class="nav-link py-0{% if route_name == "app_logout" %} active{% endif %}" href="{{ path('app_logout') }}">Se d√©connecter</a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link py-0{% if route_name == "app_login" %} active{% endif %}" href="{{ path('app_login') }}">Se connecter</a>
            </li>
            <li class="nav-item">
                <a class="nav-link py-0{% if route_name == "app_signup" %} active{% endif %}"  href="{{ path('app_signup') }}">S'inscrire</a>
            </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>