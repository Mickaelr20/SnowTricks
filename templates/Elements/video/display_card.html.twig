<div class="video-card col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card mb-4">
    <div class="video-preview">
      {% if form.vars.data is null %}
        <img src="{{ asset('build/images/empty_image.png') }}"
          class="empty-trick-edit-preview"
          title="preview video player"
          width="100%"
          height="200px" />
      {% else %}
        <iframe
          src="{{form.vars.data.virtual.preview_url}}"
          class="trick-edit-preview"
          title="{{form.vars.data.virtual.frame_title}}"
          allow="{{form.vars.data.virtual.frame_allow}}"
          allowfullscreen=""
          width="100%"
          height="200px"
          frameborder="0">
        </iframe>
      {% endif %}
    </div>

    <div class="card-body d-flex flex-column">
      {{ form_row(form.title) }}
      {{ form_row(form.link) }}
      <button type="button" class="ms-auto video-remove btn btn-outline-danger">
        Supprimer la vid√©o
        {# <i class="bi bi-trash-fill"></i> #}
      </button>
    </div>
  </div>
</div>
