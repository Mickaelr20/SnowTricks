<div class="modal fade" id="VideoModal-{{video.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-fs">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{ video.title }}</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        {% if video.virtual.preview_url != '' %}
          <iframe src="{{ video.virtual.preview_url }}"
            class="trick-edit-preview"
            title="{{ video.virtual.frame_title }}"
            width="100%"
            height="100%"
            frameborder="0"
            allow="{{ video.virtual.frame_allow }}"
            style="aspect-ratio: 16/9"
            allowfullscreen></iframe>
        {% else %}
          <img src="/images/empty_image.png"
            class="empty-trick-edit-preview"
            title="preview video player"
            width="100%"
            height="200px" />
        {% endif %}

      </div>
    </div>
  </div>
</div>