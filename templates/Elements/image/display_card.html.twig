<div class="image-card col-12 col-sm-6 col-md-4 col-lg-3">
  <div class="card mb-4">
    <div class="card-body d-flex flex-column">
      {{ form_row(form.name) }}
      <div class="file-uploader">
          {{ form_label(form.image, null, {"label_attr": {"class": "uploader-label"}}) }}
          {{ form_widget(form.image, {"attr": {"class": "d-none"}}) }}
          {% if form.vars.data is null %}
            <img class="thumbnail-preview" src="/images/empty_image.png" alt="Thumbnail preview">
          {% else %}
            <img class="thumbnail-preview" src="{{ "/uploads/images/" ~ form.vars.data.filename }}" alt="Thumbnail preview">
          {% endif %}
          <label class="thumbnail-path form-label uploader-label">Cliquer pour modifier l'image</label>
      </div>
      <button type="button" class="ms-auto image-remove btn btn-outline-danger">
        Supprimer l'image
      </button>
    </div>
  </div>
</div>
