{% extends 'base.html.twig' %}

{% block content %}
  <div class="container">
    {{ form_start(form, {"attr": {"class": "d-flex flex-column py-3"}}) }}
    <div class="row">
      <div class="col-12">
        <div class="file-uploader">
            {{ form_label(form.thumbnail, null, {"label_attr": {"class": "uploader-label"}}) }}
            {{ form_widget(form.thumbnail, {"attr": {"class": "d-none"}}) }}
            <img id="thumbnailPreview" alt="Thumbnail preview">
            <label id="thumbnailPath" class="form-label uploader-label">Cliquer pour ajouter une image</label>
        </div>
      </div>

      <div class="col-12 col-md-6">
        {{ form_row(form.name) }}
      </div>
      <div class="col-12 col-md-6">
        {{ form_row(form.category) }}
      </div>
      <div class="col-12">
        {{ form_row(form.slug) }}
      </div>
      {{ form_row(form.description) }}
    </div>
    <button class="ms-auto btn btn-primary" type="submit">Enregistrer</button>

    {{ form_end(form) }}
  </div>
{% endblock %}

{% block stylesheets_bottom %}
  <link rel="stylesheet" href="/styles/tricks.css">
{% endblock %}

{% block javascripts_bottom %}
		<script src="/scripts/tricks.js"></script>
{% endblock %}